<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:clipChildren="false">

        <!-- 个人运势 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人运势分析"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/personal_luck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:text="设置个人生辰信息后将显示个性化运势分析"
                android:visibility="visible"/>

            <!-- 详细运势分析 -->
            <TextView
                android:id="@+id/detailed_fortune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#333333"
                android:textSize="12sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="15dp"
                android:padding="12dp"
                android:background="#F8F9FA"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- 个人设置按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">
            
            <Button
                android:id="@+id/personal_setting_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人生辰设置"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_bg"
                android:padding="14dp"
                android:textAllCaps="false"
                android:elevation="0dp"/>
        </LinearLayout>

        <!-- 生肖配对 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生肖配对参考"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"/>
                
            <!-- 您的生肖选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的生肖："
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>
                
            <Spinner
                android:id="@+id/zodiac_spinner_1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="12dp"
                android:background="#F5F5F5"
                android:padding="12dp"/>
                
            <!-- 对方生肖选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对方生肖："
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>
                
            <Spinner
                android:id="@+id/zodiac_spinner_2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="12dp"
                android:background="#F5F5F5"
                android:padding="12dp"/>
                
            <Button
                android:id="@+id/zodiac_match_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看配对结果"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_bg"
                android:padding="12dp"
                android:textAllCaps="false"
                android:elevation="0dp"
                android:layout_marginBottom="8dp"/>
                
            <TextView
                android:id="@+id/compatibility_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#333333"
                android:textSize="12sp"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="#F8F9FA"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- 开发者信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_info"
            android:textSize="11sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</ScrollView>