<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:clipChildren="false">

        <!-- 标题卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卜卦说明"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>
                    
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="需在心中默念想要卜卦的事，进行卜卦。"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 实时随机数据卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="实时随机数据"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收集多熵源产生随机种子，通过位运算合并，随机生成6个卦象"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"/>

                <!-- 当前随机种子 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="当前种子:"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_current_seed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="0"
                        android:textSize="13sp"
                        android:textColor="@color/error"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 滑动坐标 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="滑动坐标:"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_touch_coordinates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="(0, 0)"
                        android:textSize="12sp"
                        android:textColor="@color/accent"/>
                </LinearLayout>

                <!-- 滑动速度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="滑动速度:"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_touch_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="0.0"
                        android:textSize="12sp"
                        android:textColor="#9B59B6"/>
                </LinearLayout>

                <!-- 加速度计 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="加速度计:"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_accelerometer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="X:0.0 Y:0.0 Z:0.0"
                        android:textSize="12sp"
                        android:textColor="@color/success"/>
                </LinearLayout>

                <!-- 陀螺仪 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="陀螺仪:"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_gyroscope"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="X:0.0 Y:0.0 Z:0.0"
                        android:textSize="12sp"
                        android:textColor="@color/warning"/>
                </LinearLayout>

                <!-- 磁场传感器 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="磁场强度:"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_magnetic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="X:0.0 Y:0.0 Z:0.0"
                        android:textSize="12sp"
                        android:textColor="@color/error"/>
                </LinearLayout>

                <!-- 系统时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="纳秒时间:"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tv_nano_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#2196F3"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- 滑动收集区域卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="滑动收集区域"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <!-- 滑动收集的触摸区域 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="12dp">
                    
                    <View
                        android:id="@+id/touch_collection_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_light"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="在此区域滑动收集随机数\n滑动时随机种子会固定变化"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:background="#66FFFFFF"
                        android:padding="12dp"/>
                </FrameLayout>

                <!-- 收集进度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收集进度: "
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                    <ProgressBar
                        android:id="@+id/progress_collection"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="30"
                        android:progress="0"/>

                    <TextView
                        android:id="@+id/tv_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/30"
                        android:textSize="14sp"
                        android:textColor="@color/error"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- 控制按钮区域卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reset_collection"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="重新收集"
                    android:textColor="@android:color/white"
                    android:background="@drawable/custom_button_bg"/>

                <Button
                    android:id="@+id/btn_start_divination"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:text="开始卜卦"
                    android:textColor="@android:color/white"
                    android:background="@drawable/custom_button_bg"
                    android:enabled="false"/>

            </LinearLayout>
        </LinearLayout>

        <!-- 卜卦结果区域 -->
        <LinearLayout
            android:id="@+id/layout_divination_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卜卦结果"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- 卦名和符号 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_gua_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="☰☰"
                        android:textSize="32sp"
                        android:textColor="@color/error"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_gua_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="乾卦"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:id="@+id/tv_gua_judgement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大吉"
                            android:textSize="16sp"
                            android:textColor="@color/success"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- 卦象文本显示 -->
                <TextView
                    android:id="@+id/tv_gua_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="━━━\n━━━\n━━━\n━━━\n━━━\n━━━"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="16dp"
                    android:background="@color/background_light"
                    android:padding="12dp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- 卦辞解释卡片 -->
        <LinearLayout
            android:id="@+id/layout_gua_interpretation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 卦辞 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="卦辞"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_gua_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="元，亨，利，贞。"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- 现代解释 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="现代解释"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_modern_interpretation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- 建议 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="建议"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- 重新卜卦按钮卡片 -->
        <LinearLayout
            android:id="@+id/layout_new_divination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_new_divination"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="重新卜卦"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_button_bg"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>